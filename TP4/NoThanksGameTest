import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class NoThanksGameTest {

    @Test
    public void testPayAction() {
        Player alice = new Player("Alice", 11);
        Card card = new Card(5);

        PlayerAction payAction = alice.choosePayAction();
        payAction.execute(card);

        assertEquals(10, alice.getTokens());
        assertEquals(1, card.getTokens());
    }

    @Test
    public void testTakeAction() {
        Player bob = new Player("Bob", 11);
        Card card = new Card(10);

        PlayerAction takeAction = bob.chooseTakeAction();
        takeAction.execute(card);

        assertEquals(11, bob.getTokens()); // Starts with 11, gains no tokens
        assertEquals(10, bob.getScore());  // Card value
        assertEquals(0, card.getTokens()); // Tokens cleared
    }}
