public class Card {
    private int value;
    private int tokens = 0;

    public Card(int value) {
        this.value = value;
    }

    public int getValue() {
        return value;
    }

    public void addToken() {
        tokens++;
    }

    public int getTokens() {
        return tokens;
    }

    public void resetTokens() {
        tokens = 0;
    }

    public boolean isConsecutive(Card other) {
        return this.value == other.value + 1;
    }
}
