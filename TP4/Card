public class Card {
    private final int value;
    private int tokens;

    public Card(int value) {
        this.value = value;
        this.tokens = 0;
    }

    public int getValue() {
        return value;
    }

    public int getTokens() {
        return tokens;
    }

    public void addToken() {
        tokens++;
    }

    public int clearTokens() {
        int clearedTokens = tokens;
        tokens = 0;
        return clearedTokens;
    }
}
