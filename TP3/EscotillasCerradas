package Explorer;

public class EscotillasCerradas extends EstadoEscotilla {
    private final Norte norte;

    public EscotillasCerradas(Norte norte) {
        this.norte = norte;
    }

    @Override
    public void abrirEscotillaSuperior() {
        norte.setEstado(new EscotillaSuperiorAbierta(norte));
    }

    @Override
    public void abrirEscotillaInferior() {
        norte.setEstado(new EscotillaInferiorAbierta(norte));
    }

    @Override
    public void cerrarEscotillas() {
        throw new RuntimeException("No hay escotillas abiertas para cerrar");
    }

    @Override
    public void aspirar() {
        throw new RuntimeException("No se puede aspirar sin abrir la escotilla superior");
    }

    @Override
    public void recogerMuestra() {
        throw new RuntimeException("No se puede recoger muestra sin abrir la escotilla inferior");
    }
}
