package Explorer;

public class EscotillaSuperiorAbierta extends EstadoEscotilla {

    public EscotillaSuperiorAbierta(Explorer explorer) {
        super(explorer);
    }

    @Override
    public void abrirEscotillaSuperior() {
        throw new RuntimeException("La escotilla superior ya est√° abierta");
    }

    @Override
    public void abrirEscotillaInferior() {
        throw new RuntimeException("No se puede abrir escotilla inferior con la superior abierta");
    }

    @Override
    public void cerrarEscotillas() {
        explorer.setEstadoEscotilla(new EscotillasCerradas(explorer));
    }

    @Override
    public void aspirar() {
        // Aspiration logic
    }

    @Override
    public void recogerMuestra() {
        throw new RuntimeException("No se puede recoger muestra sin abrir la escotilla inferior");
    }
}
