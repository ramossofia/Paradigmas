package Explorer;

public class EscotillaInferiorAbierta extends EstadoEscotilla {
    private final Norte norte;

    public EscotillaInferiorAbierta(Norte norte) {
        this.norte = norte;
    }

    @Override
    public void abrirEscotillaSuperior() {
        throw new RuntimeException("No se puede abrir escotilla superior con la inferior abierta");
    }

    @Override
    public void abrirEscotillaInferior() {
        throw new RuntimeException("La escotilla inferior ya est√° abierta");
    }

    @Override
    public void cerrarEscotillas() {
        norte.setEstado(new EscotillasCerradas(norte));
    }

    @Override
    public void aspirar() {
        throw new RuntimeException("No se puede aspirar sin abrir la escotilla superior");
    }

    @Override
    public void recogerMuestra() {
        // No action needed
    }
}
